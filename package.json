{
  "name": "nflx-slidedecks",
  "version": "1.0.0",
  "description": "Netflix slidedecks using AsciiDoc and RevealJS",
  "author": "Rahul Somasunderam",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    ":clean": "rimraf */build",
    ":typecheck": "tsc --noEmit",
    ":stylesheet:sass": "tsx scripts/build-sass.ts",
    ":stylesheet:build": "npm run :stylesheet:sass",
    ":task:presentation": "tsx scripts/build-presentation.ts",
    ":task:pdf": "tsx scripts/export-pdf.ts",
    ":bm2021:presentation": "npm run :task:presentation -- build-meetup-2021-how-netflix-builds-code",
    ":bm2021:pdf": "npm run :task:pdf -- build-meetup-2021-how-netflix-builds-code",
    ":bm2021:build": "npm run :bm2021:presentation && npm run :bm2021:pdf",
    ":cdcon2021:presentation": "npm run :task:presentation -- cdCon-2021-scaling-jenkins",
    ":cdcon2021:pdf": "npm run :task:pdf -- cdCon-2021-scaling-jenkins",
    ":cdcon2021:build": "npm run :cdcon2021:presentation && npm run :cdcon2021:pdf",
    ":build-presentations": "npm run :bm2021:presentation && npm run :cdcon2021:presentation",
    ":build-pdfs": "npm run :bm2021:pdf && npm run :cdcon2021:pdf",
    ":pages:build": "tsx scripts/build-pages.ts",
    ":build": "npm run :stylesheet:build && npm run :build-presentations && npm run :build-pdfs && npm run :pages:build",
    ":serve": "http-server pages/build/staging -p 8080 -o",
    ":dev": "npm run :build && npm run :serve"
  },
  "devDependencies": {
    "@asciidoctor/core": "^3.0.4",
    "@asciidoctor/reveal.js": "^5.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.3",
    "asciidoctor-kroki": "^0.18.1",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "http-server": "^14.1.1",
    "puppeteer": "^24.20.0",
    "reveal.js": "^5.0.0",
    "rimraf": "^6.0.0",
    "sass": "^1.69.7",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "vega": "^6.0.0",
    "vega-cli": "^6.0.0",
    "vega-embed": "^7.0.0",
    "vega-lite": "^6.0.0"
  }
}
